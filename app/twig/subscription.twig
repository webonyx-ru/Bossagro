{% extends "layouts/app.twig" %}

{% block pageTitle %}Подписка{% endblock %}

{% block content %}


    <div class="article-page">
        <div class="container">
            <ul class="breadcrumbs">
                <li class="breadcrumbs__item"><a class="link-with-underline link-gray" href="/">Главная</a></li>
                <li class="breadcrumbs__item"><a class="link-with-underline link-gray" href="/subscription.html">Подписка на журнал</a></li>
            </ul>
            <div class="d-flex">
                <div class="page-content">
                    <div class="page-content-wrapper">
                        <h3 class="h3-title">Подписка на журнал</h3>
                        <form class="subscription" action="#">
                            <label class="subscr-label">
                                <p class="subscr-input-title">Наименование предприятия или физического лица</p>
                                <input type="text" class="input input_subscr">
                            </label>
                            <label class="subscr-label">
                                <p class="subscr-input-title">Почтовый адрес</p>
                                <input type="text" class="input input_subscr">
                            </label>
                            <label class="subscr-label">
                                <p class="subscr-input-title">Адрес электронной почты</p>
                                <input type="text" class="input input_subscr">
                            </label>
                            <label class="subscr-label">
                                <p class="subscr-input-title">Контактный телефон</p>
                                <input type="text" class="input input_subscr">
                            </label>
                            <p class="subscr-input-title">Желаю получать журнал в:</p>
                            <div class="subscr-checkboxes">
                                <label class="subscr-checkbox-label">
                                    <input type="checkbox" class="checkbox">
                                    <p class="subscr-checkbox-title">электронном виде</p>
                                </label>
                                <label class="subscr-checkbox-label">
                                    <input type="checkbox" class="checkbox">
                                    <p class="subscr-checkbox-title">бумажном виде</p>
                                </label>
                            </div>
                            <div class="subscr-button-wrap"><button class="button button_send button_green">Отправить</button></div>
                        </form>
                    </div>
                </div>
                <div class="sidebar">
                    <div class="journal">
                        <a class="journal__button button button_green" href="#">Читать журнал</a>
                    </div>
                    <div class="sidebar-grid-images">
                        <div class="sidebar-grid-image">
                            <a class="link-image" href="http://zlak.info/" target="_blank"><img src="images/sidebar-image-1.jpg"></a>
                        </div>
                        <div class="sidebar-grid-image">
                            <a class="link-image" href="http://zlak.info/" target="_blank"><img src="images/sidebar-image-2.jpg"></a>
                        </div>
                        <div class="sidebar-grid-image">
                            <a class="link-image" href="#" target="_blank"><img src="images/sidebar-image-3.jpg"></a>
                        </div>
                        <div class="sidebar-grid-image">
                            <a class="link-image" href="http://agriastana.kz/ru/" target="_blank"><img src="images/sidebar-image-4.jpg"></a>
                        </div>
                    </div>
                    <div class="sidebar-ban-wrapper">
                        <img src="images/ban.jpg" alt="" class="sidebar__ban">
                    </div>
                    <div class="sidebar-gismeteo">
                        <img src="images/gismeteo.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}